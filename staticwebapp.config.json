{
  "routes": [
    {
      "route": "/login",
      "redirect": "/.auth/login/aad"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/api/auth-status",
      "allowedRoles": ["authenticated", "anonymous"]
    },
    {
      "route": "/api/sso-auth-status",
      "allowedRoles": ["authenticated", "anonymous"]
    },
    {
      "route": "/api/auth-me",
      "allowedRoles": ["authenticated", "anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif,ico,svg}", "/api/*", "/.auth/*"]
  }
} 